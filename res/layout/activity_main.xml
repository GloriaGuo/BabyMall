<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/fakecontent"
        android:layout_height="51dp"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top|left"
        android:orientation="horizontal" 
        android:layout_above="@id/fakecontent">

        <WebView
            android:id="@+id/wv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ProgressBar
            android:id="@+id/wv_progress"
            android:layout_width="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/tabs"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tabbar_2"
        android:layout_above="@id/wv"
        >
	    
		<LinearLayout
	    	android:layout_height="51dp"
            android:layout_width="0dip"
	        android:layout_weight="1"
	        >
		    <Button
		        android:id="@+id/tab_button_0"
		        android:layout_height="fill_parent"
	            android:layout_width="fill_parent"
	            android:background="@android:color/transparent"
		        />
	    </LinearLayout>
		<LinearLayout
	    	android:layout_height="fill_parent"
            android:layout_width="0dip"
	        android:layout_weight="1"
	        >
		    <Button
		        android:id="@+id/tab_button_1"
		        android:layout_height="fill_parent"
	            android:layout_width="fill_parent"
	            android:background="@android:color/transparent"
		        />
	    </LinearLayout>
		<LinearLayout
	    	android:layout_height="fill_parent"
            android:layout_width="0dip"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="vertical"
	        >
		    <Button
		        android:id="@+id/tab_button_2"
		        android:layout_marginTop="5dp"
		        android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:background="@android:color/transparent"
		        />
	    </LinearLayout>
		<LinearLayout
	    	android:layout_height="fill_parent"
            android:layout_width="0dip"
	        android:layout_weight="1"
	        >
	        <Button
	            android:id="@+id/tab_button_3"
	            android:layout_height="fill_parent"
	            android:layout_width="fill_parent"
	            android:background="@android:color/transparent"
	            />
	    </LinearLayout>
		<LinearLayout
	    	android:layout_height="fill_parent"
            android:layout_width="0dip"
	        android:layout_weight="1"
	        >
	        <Button
	            android:id="@+id/tab_button_4"
	            android:layout_height="fill_parent"
	            android:layout_width="fill_parent"
	            android:background="@android:color/transparent"
	            />
	    </LinearLayout>
	</LinearLayout>
    
</RelativeLayout>
